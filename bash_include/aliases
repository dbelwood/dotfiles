alias be="bundler exec"
alias git=hub
alias gocov="echo 'mode: atomic' > coverage.txt && go list ./... | xargs -n1 -I{} sh -c 'go test -covermode=atomic -coverprofile=coverage.tmp {} && tail -n +2 coverage.tmp >> coverage.txt' && rm coverage.tmp"
alias gocovperc="gocov && go tool cover -func=coverage.txt && rm coverage.txt"
alias gocovhtml="gocov && go tool cover -html=coverage.txt && rm coverage.txt"